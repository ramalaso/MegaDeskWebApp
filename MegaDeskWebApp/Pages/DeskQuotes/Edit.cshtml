@page
@model MegaDeskWebApp.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="my-2">Edit Desk Quote</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.ID" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.QuoteDate" class="control-label"></label>
                <input asp-for="DeskQuote.QuoteDate" class="form-control" />
                <span asp-validation-for="DeskQuote.QuoteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Drawers" class="control-label"></label>
                <input asp-for="DeskQuote.Drawers" class="form-control" />
                <span asp-validation-for="DeskQuote.Drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Material" class="control-label"></label>
                <div class="container">
                    <div class="row">
                        <figure class="mx-2">
                            <img data-toggle="tooltip" class="rounded" width="60px" height="40" src="~/images/Laminate.jpg" alt="Laminate" />
                            <figcaption style="font-size: 12px; font-weight: bold">Laminate</figcaption>
                        </figure>
                        <figure class="mx-2">
                            <img data-toggle="tooltip" class="rounded" width="60px" height="40" src="~/images/Oak.png" alt="Oak" />
                            <figcaption style="font-size: 12px; font-weight: bold">Oak</figcaption>
                        </figure>
                        <figure class="mx-2">
                            <img data-toggle="tooltip" class="rounded" width="60px" height="40" src="~/images/Rosewood.jpg" alt="Oak" />
                            <figcaption style="font-size: 12px; font-weight: bold">Rosewood</figcaption>
                        </figure>
                        <figure class="mx-2">
                            <img data-toggle="tooltip" class="rounded" width="60px" height="40" src="~/images/Venner.jpg" alt="Laminate" />
                            <figcaption style="font-size: 12px; font-weight: bold">Venner</figcaption>
                        </figure>
                        <figure class="mx-2">
                            <img data-toggle="tooltip" class="rounded" width="60px" height="40" src="~/images/Pine.jpg" alt="Oak" />
                            <figcaption style="font-size: 12px; font-weight: bold">Pine</figcaption>
                        </figure>
                    </div>
                </div>
                <select asp-for="DeskQuote.Material" class="form-control">
                    <option value="Laminate">Laminate</option>
                    <option value="Oak">Oak</option>
                    <option value="Rosewood">Rosewood</option>
                    <option value="Venner">Veneer</option>
                    <option value="Pine">Pine</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.rushDays" class="control-label"></label>
                <select asp-for="DeskQuote.rushDays" class="form-control">
                    <option value="3">3</option>
                    <option value="5">5</option>
                    <option value="7">7</option>
                    <option value="14">14</option>
                </select>
                <span asp-validation-for="DeskQuote.rushDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" value="0" asp-for="DeskQuote.TotalQuote" class="form-control" />
                <span asp-validation-for="DeskQuote.TotalQuote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
